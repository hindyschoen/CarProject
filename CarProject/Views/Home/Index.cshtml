@model CarViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <a href="/Home/Add" class="btn btn-primary">Add Car</a>
        </div>
        <div class="col-md-12">
            <table class="table table-hover table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Make</th>
                        <th>Model</th>
                        <th>
                            Year<a href="/home/index?sort=@Model.Sort" class="btn btn-success" id="sort">
                                <span class="@(Model.Sort ? "oi oi-arrow-thick-top": "oi oi-arrow-thick-bottom")"></span>
                            </a>
                        </th>
                        <th>Price</th>
                        <th>Car Type</th>
                        <th>Leather Seats</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Car car in Model.Cars)
                    {

                        <tr>
                            <td>@car.Make</td>
                            <td>@car.Model</td>
                            <td>@car.Year </td>
                            <td>@car.Price.ToString("C")</td>
                            <td>@car.CarType</td>
                            @if (car.LeatherSeats)
                            {
                                <td><span class="oi oi-check"></span></td>
                            }
                            else
                            {
                                <td><span class="oi oi-x"></span></td>
                            }


                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div> 